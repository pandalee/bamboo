@charset "utf-8"
@import core
/**********Grid System**********/
gridColumns = 24
gridColumnWidth = 50px
gridGutterWidth = 10px
docWidth = gridColumnWidth * gridColumns + gridGutterWidth
coreWidth = gridColumnWidth * gridColumns - gridGutterWidth

.offset
	margin(gridGutterWidth,l)

for n in 1..gridColumns
	.row{n}
		width(gridColumnWidth * n)
